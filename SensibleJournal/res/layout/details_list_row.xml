<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_list_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="?android:attr/activatedBackgroundIndicator" >

	<ImageView
	    android:id="@+id/details_list_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	   	android:src="@drawable/ic_action_place"
	    android:contentDescription="@string/place_icon" />

	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"	    
		    android:orientation="vertical">
		    
		<CheckedTextView
		    android:id="@+id/list_row_address"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:paddingTop="5dp"
		    android:textColor="@drawable/list_selector_address"
		    android:textSize="14sp" />
		
		<CheckedTextView
		    android:id="@+id/list_row_details"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:paddingBottom="5dp"
		    android:textColor="@drawable/list_selector_details"
		    android:textSize="13sp"
		    android:textStyle="italic" />
		
	</LinearLayout>
</LinearLayout>

