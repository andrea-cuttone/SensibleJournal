<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="11dp"
	     	android:layout_marginRight="10dp"
		    android:orientation="horizontal"
		    android:baselineAligned="false" >  
    
		    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal" >
		    
			    <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			         android:layout_marginRight="10dp"
			        android:orientation="vertical" >
			
			     	<TextView
			     	    android:id="@+id/route_from"
			     	    android:layout_width="wrap_content"
			     	    android:layout_height="wrap_content"
			     	    android:textSize="14sp"
			      		android:textColor="@color/color_main_text" />
			      		
			     	<TextView
			     	    android:id="@+id/route_to"
			     	    android:layout_width="wrap_content"
			     	    android:layout_height="wrap_content"
			     	    android:textSize="14sp"
			       		android:textColor="@color/color_main_text" />  
			       		
			     	<TextView
						android:id="@+id/speed"
				      	android:layout_width="wrap_content"
				      	android:layout_height="wrap_content"
				      	android:textSize="14sp"
				        android:textColor="@color/color_main_text" />
			
					<TextView
						android:id="@+id/distance"
		      			android:layout_width="wrap_content"
		      			android:layout_height="wrap_content"
		      			android:textSize="14sp"
		        		android:textColor="@color/color_main_text" />		
			            
				</LinearLayout>
		
			    <LinearLayout
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">
					
			        <LinearLayout
		       			android:layout_width="wrap_content"
		        	 	android:layout_height="wrap_content"
		        		android:orientation="horizontal" >
	
	      				<View
	      		    		android:layout_width="14sp"
	      		    		android:layout_height="14sp"
	      		    		android:layout_marginRight="10dp"
	      		    		android:layout_marginTop="3dp"
	      		    		android:background="@color/rectangle_green" />
			      	           		      		
			      		<TextView
			        		android:id="@+id/route_from_address"
			        		android:layout_width="match_parent"
			        		android:layout_height="wrap_content"
			        		android:textSize="14sp"
			        		android:textColor="@color/color_secondary_text" />
			      	
			      	</LinearLayout>
			      		
			        <LinearLayout
		       		 	android:layout_width="wrap_content"
		        	 	android:layout_height="wrap_content"
		        		android:orientation="horizontal" >
	
	      				<View
		      		    	android:layout_width="14sp"
		      		    	android:layout_height="14sp"
		      		    	android:layout_marginRight="10dp"
		      		    	android:layout_marginTop="3dp"
		      		    	android:background="@color/rectangle_red" />
			         
			      		<TextView
			        		android:id="@+id/route_to_address"
			        		android:layout_width="match_parent"
			        		android:layout_height="wrap_content"
			        		android:textSize="14sp"
			        		android:textColor="@color/color_secondary_text" />
			      	
			      	</LinearLayout>
			      	
			      	<TextView
						android:id="@+id/the_speed"
				      	android:layout_width="match_parent"
				      	android:layout_height="wrap_content"
				      	android:textSize="14sp"
				        android:textColor="@color/color_secondary_text"
				        android:gravity="left" />
			
					<TextView
						android:id="@+id/the_distance"
		      			android:layout_width="match_parent"
		      			android:layout_height="wrap_content"
		      			android:textSize="14sp"
		        		android:textColor="@color/color_secondary_text"
		        		android:gravity="left" />
			            
			</LinearLayout>			
		</LinearLayout>
		     
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
			
			<ImageView
			    android:id="@+id/vehicle"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:contentDescription="@string/vehicle_image" />
	
	    </LinearLayout>   	    	    
	</LinearLayout>
	
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	            
		<it.gmariotti.cardslib.library.view.component.CardThumbnailView
			android:id="@+id/card_thumbnail_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="5dp" />
		
			<Button
				    android:id="@+id/awesome"
				    android:layout_width="wrap_content"
				    android:layout_height="45dp"
				    android:layout_gravity="bottom|right"
				    android:gravity="center"
				    android:textSize="14sp" />	           
	</FrameLayout>
	
</LinearLayout>
