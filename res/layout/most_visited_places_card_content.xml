<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"> 

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="11dp"
     	android:layout_marginRight="10dp"
	    android:orientation="horizontal">             
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="20dp"
	        android:orientation="vertical" >
	      		
	         <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
	
	      		<View
	      		    android:layout_width="14sp"
	      		    android:layout_height="14sp"
	      		    android:layout_marginRight="10dp"
	      		    android:layout_marginTop="3dp"
	      		    android:background="@color/rectangle_green" />
	
	      		<TextView
	      		    android:id="@+id/place1"
	      		    android:layout_width="match_parent"
	      		    android:layout_height="wrap_content"
	      		    android:textColor="@color/color_main_text"
	      		    android:textSize="14sp" />
	      	</LinearLayout>
	      	
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
	
	      		<View
	      		    android:layout_width="14sp"
	      		    android:layout_height="14sp"      		    
		        	android:layout_marginRight="10dp"
		        	android:layout_marginTop="3dp"
	      		    android:background="@color/rectangle_blue" />
	
	      		<TextView
	      		    android:id="@+id/place2"
	      		    android:layout_width="match_parent"
	      		    android:layout_height="wrap_content"
	      		    android:textColor="@color/color_main_text"
	      		    android:textSize="14sp" />
	      	</LinearLayout>
	      	
	         <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
	
	      		<View
	      		    android:layout_width="14sp"
	      		    android:layout_height="14sp"
	      		    android:layout_marginRight="10dp"
	      		    android:layout_marginTop="3dp"
	      		    android:background="@color/rectangle_red" />
	
	      		<TextView
	      		    android:id="@+id/place3"
	      		    android:layout_width="match_parent"
	      		    android:layout_height="wrap_content"
	      		    android:textColor="@color/color_main_text"
	      		    android:textSize="14sp" />
	      	</LinearLayout>
	      		
	            		            
		</LinearLayout>
	
	    <LinearLayout
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:orientation="vertical">             
	
	      		<TextView
	        		android:id="@+id/time1"
	        		android:layout_width="match_parent"
	        		android:layout_height="wrap_content"
	        		android:textSize="14sp"
	        		android:textColor="@color/color_secondary_text"
	        		android:gravity="right" />
	      
	      		<TextView
	        		android:id="@+id/time2"
	        		android:layout_width="match_parent"
	        		android:layout_height="wrap_content"
	        		android:textSize="14sp"
	        		android:textColor="@color/color_secondary_text"
	        		android:gravity="right" />
	      		
	      		<TextView
	        		android:id="@+id/time3"
	        		android:layout_width="match_parent"
	        		android:layout_height="wrap_content"
	        		android:textSize="14sp"
	        		android:textColor="@color/color_secondary_text"
	        		android:gravity="right" />
	            
		</LinearLayout>    	         
	</LinearLayout>
	
	<FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	            
		<it.gmariotti.cardslib.library.view.component.CardThumbnailView
			android:id="@+id/card_thumbnail_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="5dp" />
		
		<LinearLayout
			android:id="@+id/awesome_layout"
			android:layout_width="140dp"
			android:layout_height="36dp"
			android:clickable="true"
			android:onClick="awesomeClicked"
			android:orientation="vertical"
			android:layout_gravity="bottom|right" >
		
			<TextView
			    android:id="@+id/awesome"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center"
				android:drawablePadding="2dp"
			    android:textSize="14sp" />
		</LinearLayout>				           
	</FrameLayout>
	
</LinearLayout>