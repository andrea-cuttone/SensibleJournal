<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid            
            android:color="#008FB2" />
        <stroke
            android:width="1dp"
            android:color="#7A7A7A"
            android:alpha="0.25" />        
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
<item>
    <shape>
        <solid
            android:color="#ffffff" />
        <stroke
            android:width="1dp"
            android:color="#7A7A7A"
            android:alpha="0.25" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>
</selector>